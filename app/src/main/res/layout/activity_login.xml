<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_75sdp"
            android:src="@drawable/ic_admin"
            android:layout_gravity="center"
            android:layout_height="@dimen/_75sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_medium"
            android:textSize="@dimen/_12ssp"
            android:layout_marginVertical="@dimen/_12ssp"
            android:text="Android Admin LTE"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextOutLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/black"
            android:padding="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
            app:errorEnabled="true"
            app:boxCornerRadiusTopStart="@dimen/_4sdp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:hint="Enter Username"
                android:inputType="text"
                android:maxLength="10"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/material_dynamic_neutral30"
                android:textSize="@dimen/_12ssp"   />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextOutLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/black"
            android:padding="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
            app:errorEnabled="true"
            app:boxCornerRadiusTopStart="@dimen/_4sdp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:imeOptions="actionDone"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="@color/material_dynamic_neutral30"
                android:textSize="@dimen/_12ssp"   />

        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_11ssp"
            android:background="@drawable/background_button_blue"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:textColor="@color/white"
            android:layout_height="wrap_content">



        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


</RelativeLayout>